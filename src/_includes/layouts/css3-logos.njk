<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8">
  <script>
    document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/g, '') + 'has-js ';
  </script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ renderData.description or description or metadata.description }}">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <link rel="stylesheet" href="/styles/css3-logos.css">
  <link rel="stylesheet" href="/styles/prism-dracula-theme.css">
  <style>
    .showcase {
      background-color: {{ logo.background }};
    }
    {{ logo.css }}
  </style>
</head>
<body id="top" itemscope itemtype="http://schema.org/WebPage">
  <div>
    <h1>{{ logo.name }}</h1>
    Logo recreated using pure HTML and CSS3. No images. No JS

    {# PAGINATION #}
    <div class="pagination">
      {% if pagination.previousPageHref %}
      <a class="pagination-item prev" rel="prev" href="{{ pagination.previousPageHref }}">← Prev</a>
      {% elseif pagination.lastPageHref %}
      <a class="pagination-item prev" rel="prev" href="{{ pagination.lastPageHref }}">← Prev</a>
      {% endif %}

      {% if pagination.nextPageHref %}
      <a class="pagination-item next" rel="next" href="{{ pagination.nextPageHref }}">Next →</a>
      {% elseif pagination.firstPageHref %}
      <a class="pagination-item prev" rel="prev" href="{{ pagination.firstPageHref }}">← Next</a>
      {% endif %}
    </div>
  </div>

  <div class="post">
    <div class="showcase">
      {{ logo.html | safe }}
    </div>
    {# <div>Social</div> #}
    <div class="code">
      <h2 class="code__title">HTML</h2>
      <pre class="source-code">{{ logo.html | htmlCode | safe }}</pre>
    </div>
    <div class="code">
      <h2 class="code__title">CSS</h2>
      <pre class="source-code">{{ logo.css | cssCode | safe }}</pre>
    </div>
  </div>
</body>
</html>
